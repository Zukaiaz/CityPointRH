@{
    ViewData["Title"] = "Booking Policies & Terms";
}

<style>
    .policies-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .page-header {
        margin-bottom: 30px;
    }

        .page-header h1 {
            font-size: 1.75rem;
            font-weight: bold;
            margin-bottom: 0;
        }

    .quick-overview {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 30px;
    }

        .quick-overview h5 {
            font-size: 1rem;
            font-weight: bold;
            margin-bottom: 15px;
        }

    .overview-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
    }

    .overview-item {
        text-align: center;
    }

    .overview-label {
        font-size: 0.875rem;
        color: #6c757d;
        margin-bottom: 5px;
    }

    .overview-value {
        font-size: 1.125rem;
        font-weight: bold;
        color: #212529;
    }

    .policy-section {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
    }

        .policy-section h5 {
            font-size: 1rem;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .policy-section ul {
            list-style-type: disc;
            padding-left: 20px;
            margin-bottom: 0;
        }

            .policy-section ul li {
                margin-bottom: 8px;
                color: #495057;
            }

    .pricing-details {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 10px;
    }

    .pricing-title {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .pricing-subtitle {
        font-size: 0.875rem;
        color: #6c757d;
        margin-bottom: 8px;
    }

    .pricing-amount {
        font-size: 1.125rem;
        font-weight: bold;
        color: #28a745;
    }

    .pricing-note {
        font-size: 0.75rem;
        color: #6c757d;
        font-style: italic;
        margin-top: 5px;
    }

    .important-note {
        background-color: #fff3cd;
        border: 1px solid #ffc107;
        border-radius: 4px;
        padding: 15px;
        margin-top: 15px;
    }

        .important-note h6 {
            font-weight: bold;
            margin-bottom: 10px;
            font-size: 0.9rem;
        }

        .important-note ul {
            list-style-type: disc;
            padding-left: 20px;
            margin-bottom: 0;
            font-size: 0.875rem;
        }

            .important-note ul li {
                margin-bottom: 5px;
            }

    .contact-section {
        text-align: center;
        margin-top: 30px;
    }

    .btn-contact {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 4px;
        font-weight: 500;
        text-decoration: none;
        display: inline-block;
    }

        .btn-contact:hover {
            background-color: #218838;
            color: white;
        }
</style>

<div class="policies-container">
    <div class="page-header">
        <h1>Booking Policies & Terms</h1>
    </div>

    <!-- Quick Overview -->
    <div class="quick-overview">
        <h5>Quick Overview</h5>
        <div class="overview-grid">
            <div class="overview-item">
                <div class="overview-label">Booking Notice</div>
                <div class="overview-value">24 hours</div>
            </div>
            <div class="overview-item">
                <div class="overview-label">Cancellation</div>
                <div class="overview-value">48 hours</div>
            </div>
            <div class="overview-item">
                <div class="overview-label">Confirmation</div>
                <div class="overview-value">Same day</div>
            </div>
        </div>
    </div>

    <!-- 1. Booking Process -->
    <div class="policy-section">
        <h5>1. Booking Process</h5>
        <ul>
            <li>All bookings are subject to availability and staff confirmation</li>
            <li>You will receive confirmation within 24 hours</li>
            <li>Payment required within 24 hours of booking confirmation</li>
        </ul>
    </div>

    <!-- 2. Pricing Structure -->
    <div class="policy-section">
        <h5>2. Pricing Structure</h5>

        <div class="pricing-details">
            <div class="pricing-title">Half Day (up to 4 hours)</div>
            <div class="pricing-subtitle">Weekdays 9AM - 5PM</div>
            <div class="pricing-amount">Starting from £50</div>
            <div class="pricing-note">*Prices vary by room type</div>
        </div>

        <div class="pricing-details">
            <div class="pricing-title">Full Day (up to 8 hours)</div>
            <div class="pricing-subtitle">Weekdays 9AM - 5PM</div>
            <div class="pricing-amount">Starting from £85</div>
            <div class="pricing-note">*15% discount applied</div>
        </div>

        <div class="pricing-details">
            <div class="pricing-title">Evening Rate</div>
            <div class="pricing-subtitle">After 5PM and weekends</div>
            <div class="pricing-amount">Starting from £40</div>
            <div class="pricing-note">*Available upon request (Equipment usage)</div>
        </div>
    </div>

    <!-- 3. Cancellation Policy -->
    <div class="policy-section">
        <h5>3. Cancellation Policy</h5>

        <div class="important-note">
            <h6>Important:</h6>
            <ul>
                <li>48+ hours notice = full refund</li>
                <li>24-48 hours notice = 50% refund</li>
                <li>Less than 24 hours = no refund</li>
            </ul>
        </div>
    </div>

    <!-- 4. Terms & Conditions -->
    <div class="policy-section">
        <h5>4. Terms & Conditions</h5>
        <ul>
            <li>Rooms must be left in the condition they were found</li>
            <li>No smoking or vaping permitted on premises</li>
            <li>Maximum capacity must be adhered to at all times</li>
            <li>Equipment damage will be charged to the booking party</li>
            <li>CityPoint reserves the right to cancel bookings with full refund</li>
        </ul>
    </div>

    <!-- 5. Community & Business Discounts -->
    <div class="policy-section">
        <h5>5. Community & Business Discounts</h5>
        <ul>
            <li>Registered charities: 20% discount on all bookings</li>
            <li>Regular customers (5+ bookings): 10% loyalty discount</li>
            <li>Community groups: Special rates available upon request</li>
            <li>Block bookings (10+ sessions): Contact us for custom pricing</li>
        </ul>
    </div>

    <!-- Contact Section -->
    <div class="contact-section">
        <a href="@Url.Action("Contact", "Home")" class="btn-contact">Contact Us for Details</a>
    </div>
</div>
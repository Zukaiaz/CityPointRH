@model IEnumerable<CityPointRH.Models.Venues>
@{
    ViewData["Title"] = "Rooms & Facilities";
}

<style>
    .page-header {
        margin-bottom: 30px;
    }

        .page-header h1 {
            font-size: 1.75rem;
            font-weight: bold;
        }

    .filter-section {
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 30px;
    }

    .filter-label {
        font-weight: 500;
        margin-bottom: 10px;
        display: block;
    }

    .filter-inputs {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 15px;
        align-items: end;
    }

    .filter-group {
        display: flex;
        flex-direction: column;
    }

    .filter-input {
        padding: 8px 12px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        font-size: 0.9rem;
    }

    .btn-apply-filters {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 8px 30px;
        border-radius: 4px;
        font-weight: 500;
        cursor: pointer;
        height: 38px;
    }

        .btn-apply-filters:hover {
            background-color: #0056b3;
        }

    .venues-list {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .venue-card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        display: flex;
        gap: 20px;
    }

    .venue-image-container {
        flex-shrink: 0;
    }

    .venue-image {
        width: 200px;
        height: 150px;
        background-color: #e9ecef;
        border-radius: 4px;
        object-fit: cover;
    }

    .venue-image-placeholder {
        width: 200px;
        height: 150px;
        background-color: #e9ecef;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-size: 14px;
    }

    .venue-content {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .venue-title {
        font-size: 1.25rem;
        font-weight: bold;
        margin-bottom: 15px;
    }

    .venue-info-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-bottom: 15px;
    }

    .info-item {
        display: flex;
        flex-direction: column;
    }

    .info-label {
        font-size: 0.875rem;
        color: #6c757d;
        margin-bottom: 3px;
    }

    .info-value {
        font-size: 1rem;
        color: #212529;
        font-weight: 500;
    }

    .facilities-section {
        margin-bottom: 15px;
    }

    .facilities-label {
        font-size: 0.875rem;
        color: #6c757d;
        margin-bottom: 8px;
        font-weight: 500;
    }

    .facilities-tags {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .facility-tag {
        background-color: #cfe2ff;
        color: #084298;
        padding: 5px 12px;
        border-radius: 4px;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .venue-actions {
        display: flex;
        gap: 10px;
        margin-top: auto;
    }

    .btn-view-details {
        flex: 1;
        background-color: #cfe2ff;
        border: none;
        color: #000;
        padding: 10px 20px;
        border-radius: 4px;
        font-weight: 500;
        text-align: center;
        text-decoration: none;
        display: inline-block;
    }

        .btn-view-details:hover {
            background-color: #b6d4fe;
            color: #000;
            text-decoration: none;
        }

    .btn-book-room {
        flex: 1;
        background-color: #90ee90;
        border: none;
        color: #000;
        padding: 10px 20px;
        border-radius: 4px;
        font-weight: 500;
        text-align: center;
        text-decoration: none;
        display: inline-block;
    }

        .btn-book-room:hover {
            background-color: #7fd87f;
            color: #000;
            text-decoration: none;
        }

    .admin-links {
        margin-top: 10px;
        font-size: 0.875rem;
    }

        .admin-links a {
            color: #007bff;
            text-decoration: none;
            margin-right: 10px;
        }

            .admin-links a:hover {
                text-decoration: underline;
            }

    .pagination {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 30px;
    }

    .pagination-btn {
        padding: 8px 12px;
        border: 1px solid #ddd;
        background-color: #fff;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        color: #212529;
    }

        .pagination-btn:hover {
            background-color: #f8f9fa;
            text-decoration: none;
            color: #212529;
        }

        .pagination-btn.active {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }

    .no-venues {
        text-align: center;
        padding: 40px;
        color: #6c757d;
    }
</style>

<div class="page-header">
    <h1>Rooms & Facilities</h1>
</div>

<!-- Filter Section -->
<div class="filter-section">
    <label class="filter-label">Filter by:</label>
    <form asp-action="Index" method="get">
        <div class="filter-inputs">
            <div class="filter-group">
                <input type="number" name="minCapacity" class="filter-input" placeholder="Capacity" min="0" value="@ViewData["minCapacity"]" />
            </div>
            <div class="filter-group">
                <input type="text" name="roomType" class="filter-input" placeholder="Room Type" value="@ViewData["roomType"]" />
            </div>
            <div class="filter-group">
                <input type="text" name="features" class="filter-input" placeholder="Features" value="@ViewData["features"]" />
            </div>
            <div class="filter-group">
                <button type="submit" class="btn-apply-filters">Apply Filters</button>
            </div>
        </div>
    </form>
</div>

<!-- Venues List -->
<div class="venues-list">
    @if (Model != null && Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="venue-card">
                <!-- Image Section -->
                <div class="venue-image-container">
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="~/images/venues/@item.ImagePath"
                             alt="@item.VenueName"
                             class="venue-image"
                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                        <div class="venue-image-placeholder" style="display:none;">
                            IMAGE
                        </div>
                    }
                    else
                    {
                        <div class="venue-image-placeholder">
                            IMAGE
                        </div>
                    }
                </div>

                <!-- Content Section -->
                <div class="venue-content">
                    <div class="venue-title">@item.VenueName</div>

                    <!-- Info Grid -->
                    <div class="venue-info-grid">
                        <div class="info-item">
                            <span class="info-label">Capacity</span>
                            <span class="info-value">@item.Capacity people</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Size</span>
                            <span class="info-value">450 sq ft</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Type</span>
                            <span class="info-value">Meeting Room</span>
                        </div>
                    </div>

                    <!-- Facilities -->
                    <div class="facilities-section">
                        <div class="facilities-label">Facilities:</div>
                        <div class="facilities-tags">
                            <span class="facility-tag">WiFi</span>
                            <span class="facility-tag">Projector</span>
                            <span class="facility-tag">Whiteboard</span>
                            <span class="facility-tag">A/C</span>
                            <span class="facility-tag">Accessible</span>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="venue-actions">
                        <a asp-action="Details" asp-route-id="@item.VenuesId" class="btn-view-details">
                            View Details
                        </a>
                        <a asp-controller="VenueBookings" asp-action="Create" asp-route-venuesId="@item.VenuesId" class="btn-book-room">
                            Book This Room
                        </a>
                    </div>

                    <!-- Admin Links -->
                    <div class="admin-links">
                        <a asp-action="Edit" asp-route-id="@item.VenuesId">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.VenuesId">Delete</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="no-venues">
            <p>No venues found matching your criteria.</p>
        </div>
    }
</div>

<!-- Pagination -->
<div class="pagination">
    <a href="#" class="pagination-btn">1</a>
    <a href="#" class="pagination-btn">2</a>
    <a href="#" class="pagination-btn">3</a>
</div>
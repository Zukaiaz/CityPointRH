@model CityPointRH.Models.VenueEquipment

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>VenueEquipment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VenueEquipmentId" />
            <div class="form-group">
                <label asp-for="VenueId" class="control-label"></label>
                <select asp-for="VenueId" class="form-control" asp-items="ViewBag.VenueId"></select>
                <span asp-validation-for="VenueId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EquipmentHireId" class="control-label"></label>
                <select asp-for="EquipmentHireId" class="form-control" asp-items="ViewBag.EquipmentHireId"></select>
                <span asp-validation-for="EquipmentHireId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsIncluded" /> @Html.DisplayNameFor(model => model.IsIncluded)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model CityPointRoomHire.Models.Venues

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Venues</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VenueName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VenueDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VenueLocation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VenueLocation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    <h4>Equipment</h4>

    @if (Model.VenueEquipment != null && Model.VenueEquipment.Any())
    {
        <ul>
            @foreach (var ve in Model.VenueEquipment)
            {
                <li>
                    @ve.Equipment.Name (x@ve.Quantity)
                </li>
            }
        </ul>
    }
    else
    {
        <p>No equipment available for this venue.</p>
    }

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.VenuesId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
